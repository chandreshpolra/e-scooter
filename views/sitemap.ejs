<body>

  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo mb-2">
          <a href="/"><img src="../uploads/logo.jpg" alt="E-Scooter Logo"></a>
        </div>
        <p class="header-subtitle">Your Trusted Source for Electric Scooter and EV News</p>
      </div>
    </div>
  </header>

  <!-- Sitemap Start  -->
  <div class="container my-5 sitemap-container">
    <h1 class="text-center mb-5">Sitemap</h1>

    <div class="sitemap-section">
      <h2 class="sitemap-section-title">Pages</h2>
      <ul class="sitemap-list sitemap-list-static">
        <% staticPages.forEach(page => { %>
          <li>
            <a href="<%= page.path %>">
              <i class="bi bi-file-earmark-text"></i>
              <span><%= page.name %></span>
            </a>
          </li>
        <% }); %>
      </ul>
    </div>

    <% 
    // Group blogs by category
    const groupedBlogs = blogs.reduce((acc, blog) => {
      const category = blog.category || 'General';
      if (!acc[category]) {
        acc[category] = [];
      }
      acc[category].push(blog);
      return acc;
    }, {});
    %>

    <div class="sitemap-section">
      <h2 class="sitemap-section-title">Blog Posts</h2>
      <div class="sitemap-columns">
        <% Object.keys(groupedBlogs).sort().forEach(category => { %>
          <div class="sitemap-column">
            <h3 class="sitemap-letter-title"><%= category %> (<%= groupedBlogs[category].length %>)</h3>
            <ul class="sitemap-list">
              <% groupedBlogs[category].sort((a, b) => a.title.localeCompare(b.title)).forEach(blog => { %>
                <li>
                  <a href="/blogs/<%= blog.slug %>" title="<%= blog.title %>">
                    <i class="bi bi-link-45deg"></i>
                    <span><%= blog.title %></span>
                  </a>
                </li>
              <% }); %>
            </ul>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
  <!-- Sitemap End  -->

  <!-- Footer -->
  <footer class="footer hide-on-search">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="footer-logo">
            <a href="/"><img src="../uploads/logo.jpg" alt="E-Scooter Logo"></a>
          </div>
          <p>Your Trusted Source for Electric Scooter and EV News</p>
        </div>
        <div class="footer-bottom">
          <div class="footer-links">
